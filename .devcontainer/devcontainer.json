{
	"name": "ATAK Plugin - Hello World",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"ANDROID_STUDIO_VERSION": "2024.3.2.15",
			"ATAK_SDK_VERSION": "5.4.0.11"
		}
	},
	"features": {
		// https://containers.dev/features
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/git-lfs:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-containers",
				"GitHub.vscode-github-actions"
			],
			"settings": {
				"extensions.ignoreRecommendations": true,
				"terminal.integrated.cwd": "/workspaces/plugins/${localWorkspaceFolderBasename}"
			}
		}
	},
	"postCreateCommand": "bash .devcontainer/postCreateCommand.sh --basename ${localWorkspaceFolderBasename} --android-studio-version 2024.3.2",
	"postStartCommand": "bash .devcontainer/postStartCommand.sh",
	"remoteUser": "vscode"
}
